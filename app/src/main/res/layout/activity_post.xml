<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostActivity">

    <include
        android:id="@+id/post_bar"
        layout="@layout/appbar"
        >
    </include>

    <RelativeLayout
        android:id="@+id/post2"
        android:layout_below="@id/post_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/post_boarder"
        >

    <ImageButton
        android:id="@+id/select_post_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_action_post"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edit_post_text"
        android:layout_below="@+id/select_post_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="@string/write_post_quote"
        android:textAlignment="center"
        />
    <Button
        android:id="@+id/Post_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_post_text"
        android:text="@string/post_now"
        android:background="@drawable/buttons"
        android:padding="10dp"
        android:layout_marginBottom="15dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        />
    </RelativeLayout>
</RelativeLayout>