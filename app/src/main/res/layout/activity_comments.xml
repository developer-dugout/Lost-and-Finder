<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/msgbgColor"
    tools:context=".CommentsActivity">

    <include
        android:id="@+id/commentBar"
        layout="@layout/appbar"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comments_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/commentBar"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:layout_above="@id/bottom"
         />

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/bottom"
        android:layout_toStartOf="@id/bottom_plus"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="6dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/comments_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:hint="@string/type_a_comment"
            android:inputType="textCapWords"
            android:layout_marginStart="8dp"
            android:paddingEnd="4dp"
            android:textSize="15sp"
            app:met_floatingLabel="normal"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="50dp"
        android:padding="2dp"
        android:id="@+id/bottom_plus"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_height="50dp">

        <ImageButton
            android:id="@+id/post_comment_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="3dp"
            android:background="@drawable/post_comment"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</RelativeLayout>